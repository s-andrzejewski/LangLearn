<Application x:Class="LangLearn.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LangLearn"
             xmlns:viewModel="clr-namespace:LangLearn.MVVM.ViewModel"
             xmlns:view="clr-namespace:LangLearn.MVVM.View"
             StartupUri="MVVM/View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:QuizViewModel}">
                <view:QuizView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:AddWordViewModel}">
                <view:AddWordView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:EditWordViewModel}">
                <view:EditWordView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:DeleteWordViewModel}">
                <view:DeleteWordView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
